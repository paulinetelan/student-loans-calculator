<%- include('partials/header'); -%>

<div class="loans container">
  <div class="row justify-content-center pt-5">
    <span class="dark-green-text logo-icon">
      <i class="fas fa-graduation-cap"></i>
      <i class="fas fa-calculator"></i>
    </span>

  </div>
  <div class="row justify-content-center pt-3">
    <h1 class="dark-green-text">Student Loans Calculator</h1>
  </div>
  <div class="row justify-content-center">
    <h5>School schmool.</h5>
  </div>

  <!-- for previously entered loans -->
  <% for (var i=0; i<loans.length; i++) { %>
  <%- include('partials/loan-edit', {loan: loans[i], loanIndex: (i+1)}); -%>
  <% } %>
  <%# Add new loan row %>
  <%- include('partials/loan-add'); -%>

</div>

<div class="dark-green-bg container-fluid">
  <div class="row justify-content-center pt-3">
    <h2>What's the plan?</h2>
  </div>
  <div class="row">
    <div class="left-col col-6 mt-3">
      <h3>Option 1: How long will it take for me to pay my loans?</h3>
    </div>
    <div class="col-6 mt-3">
      <h3>Option 2: How much will I have to pay <%- include('partials/pmt-freq-button'); -%></h3>
    </div>

  </div>
</div>



<%- include('partials/footer'); -%>
